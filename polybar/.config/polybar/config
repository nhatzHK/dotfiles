[colors]
background = ${xrdb:URxvt*background}
foreground = ${xrdb:URxvt*foreground}
black = ${xrdb:color7}
red = ${xrdb:color6}
green = ${xrdb:color5}
yellow = ${xrdb:color4}
blue = ${xrdb:color3}
magenta = ${xrdb:color2}
cyan = ${xrdb:color1}
white = ${xrdb:color0}

[bar/shadow]
monitor = eDP1
width = 100%
bottom = false
height = 20
radius = 0
;fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 1
line-color = #f00

;border-left-size = 7
;border-right-size = 7
;border-top-size = 2
;border-bottom-size = 2
;border-color = argb (0, 0, 0, 0)

padding-left = 1
padding-right = 2

module-margin-left = 1
module-margin-right = 2

;font-0 = Source Code Pro for Powerline:pixelsize=8;1
font-0 = fixed:pixelsixe=10;1
font-1 = unifont:fontformat=truetype:size=8:antialias=true;0
font-2 = Wuncon Siji:pixelsize=20;1
font-3 = FontAwesome:style=Regular:size=10;1
font-4 = material\-wifi:style=Regular:size=12;0

modules-left = xwindow i3
modules-center = screensaver date weather
modules-right = pacman xbacklight memory cpu wlan battery volume temperature pomodoro

tray-position = none 
tray-padding = 0
tray-transparent = false

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%
label-foreground = ${colors.magenta}

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = "ÓâØ "
format-prefix-foreground = ${colors.white}

label-layout = %layout%

label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${colors.background}

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted = %{F#0a81f5}%mountpoint%%{F-}: %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.white}

[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-background = ${colors.background}
label-focused-underline= ${colors.foreground}
label-focused-padding = 2

label-occupied = %index%
label-occupied-padding = 2

label-urgent = %index%!
label-urgent-background = ${colors.red}
label-urgent-padding = 2

label-empty = %index%
label-empty-foreground = ${colors.foreground}
label-empty-padding = 2

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
strip-wsnumbers = true

; workspaces icons
ws-icon-1 = tux;"ÔÖº"
ws-icon-2 = random;"ÔÅ¥"
ws-icon-3 = chat;"ÔÇÜ"
ws-icon-4 = calendar;"ÔÅ≥"
ws-icon-5 = email;"ÔÉ†:
ws-icon-6 = doc;"Ôáâ"
ws-icon-7 = code;"ÔÑ°"
ws-icon-8 = scribus;"ÔÄµ"
ws-icon-9 = gaymes;"ÔÑõ"
ws-icon-10 = media;"ÔÄà"

; Only show workspaces on the same output as the bar
pin-workspaces = true

label-mode-padding = 2
label-mode-foreground = ${colors.green}
label-mode-background = ${colors.blue}

label-focused = %name%
label-focused-foreground = ${colors.yellow}
label-focused-background = ${colors.background} 
label-focused-padding = ${module/bspwm.label-focused-padding}

; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-padding = ${module/bspwm.label-occupied-padding}

; visible = Active workspace on unfocused monitor
label-visible = %name%
label-visible-foreground = ${colors.blue}
label-visible-background = ${colors.green}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %name%
label-urgent-background = ${colors.background}
label-urgent-foreground = ${colors.red}
label-urgent-padding = ${module/bspwm.label-urgent-padding}


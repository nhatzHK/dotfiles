[module/pacman]
type = custom/script
format = <label>
exec = $HOME/.config/polybar/updates
exec-if = "ping -q -w 2 -c 1 176.34.135.167 > /dev/null"
interval = 60
format-foreground = ${colors.cyan}
label = "%output:0:30%"


[module/pomodoro]
type = custom/script
; Use pomodoro glyphs in Nerd fonts
exec = pymodoro -sp $HOME/Music/Ressources/pomodoro_end.wav -sb $HOME/Music/Ressources/break_end.waav -st $HOME/Music/Ressources/clock_tick.wav --tick --break-prefix "ÓÄÖ " --pomodoro-prefix "ÓÄÉ " --pomodoro ÓÄÅ --empty ÓÄÇ --break ÓÄÜ --length 5
; Use default symbols
label = %output%
tail = true
interval = 0
; Start or reset the timer
click-left = if [ -e ~/.pomodoro_session ]; then rm ~/.pomodoro_session; else echo "25 5" > ~/.pomodoro_session; fi
; Increase pomodoro time
click-right = echo "$((`cut .pomodoro_session -d ' ' -f 1`+5)) 5" > .pomodoro_session
; Reduce pomodoro time
click-middle = echo "$((`cut .pomodoro_session -d ' ' -f 1`-5)) 5" > .pomodoro_session

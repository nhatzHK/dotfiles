# Wallpaper; Polybar
exec_always killall polybar; exec /usr/bin/wal -t -i $HOME/.config/i3/wallpaper0 -o $HOME/.config/polybar/launch.sh
# Relaunch whole visual setup
bindsym $mod+Shift+r exec i3 restart
bindsym $alt+Shift+r exec killall polybar; exec /usr/bin/wal -t -i $HOME/.config/i3/wallpaper0 -o $HOME/.config/polybar/launch.sh
# Relaunch bar
bindsym $alt+Shift+p exec killall polybar; exec $HOME/.config/polybar/launch.sh

